{
  "manifest_version": 3,
  "name": "Notium",
  "description": "Take notes directly on any website. Save ideas, links, and important information for each page.",
  "version": "1.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["notes.css"],
      "js": ["content.js"]
    }
  ]
}
